    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/transcribe_youtube.py",
            "args": [
                "--youtube_url",
                "https://www.youtube.com/watch?v=t_5XYkZq1Y0&t=372s",
                "--file_name",
                "trikvartiri",
                "--method",
                "fast_whisper",
                "--task",
                "custom"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments - subtitels2srt",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/subtitels2srt.py",
            "args": [
                "--input_file",
                "video_audio.json",
                "--output_file",
                "video_audio.srt"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: sub2text",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sub2text.py",
            "args": [
                "--file",
                "output/archive/Bulgaria1984/Bulgaria1984.srt"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: sub2text folder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sub2text.py",
            "args": [
                "--folder",
                "output/archive"
            ],
            "console": "integratedTerminal"
        }
    ]
}